{% extends "PiggyBoxTicketBundle::layout.html.twig" %}

{% block content %}

    <div id="content" class="container">

        <div class="row">
            <div class="span12">


                <h2>Rechercher par nom</h2>
                <br>
                <br>
                <form id="searchform" class="span10 offset1" method="post" action="{{ path('customer_search') }}">
                	<div class="row">
						<div class="span4">
                            {{ form_row(form.keyword) }}
                            {{ form_rest(form) }}
                        </div>
                        <div class="span2">
                            <button id="customersearch_button" type="submit" class="btn btn-large">
                                <i class='icon-search'></i> Rechercher
                            </button>
                        </div>
					</div>

                    <div class="loading">
                        <div id="searchresult">
                            <ul id="test" >                                
                            </ul>
                        </div>
                    </div>

                </form>

            </div>
        </div>

    </div>

{% endblock %}
