<!DOCTYPE html>
<html>
    <head>

        <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
        <meta http-equiv="content-language" content="fr" />

        <meta name="author" lang="fr" content="Julien Bourdeau" />
        <meta name="copyright" lang="fr" content="Julien Bourdeau" />
        <meta name="description" content="Un systeme de gestion des tickets Resto" />

        <meta name="robots" content="noindex" />

        <meta charset="UTF-8" />
        <title>{% block title %}Gestion des avoirs des tickets restaurant!{% endblock %}</title>
        {% block stylesheets %}
            {% stylesheets filter='cssrewrite'
            	'bundles/piggyboxticket/css/*'
            %}
            <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}


    </head>
    <body>
        <div id="maincontainer">
            <header id="header" class="container">

            <div id="branding" class="row">
                <div class="span12">
                    <div class="pull-right"><br /><img src="{{ asset('bundles/piggyboxticket/img/logos.png') }}" /></div>
                    <a href="{{ path('customer_search') }}"></a>
                </div>
            </div>

            <div class="clear"></div>

            <div class="navbar">
                <div class="navbar-inner">
                    <div class="container">
                        <ul class="nav">
                            <li><a href="{{ path('customer_search') }}">Rechercher</a></li>
                            <li><a href="{{ path('customer_new') }}">Ajouter</a></li>
                            <li><a href="{{ path('customer_list') }}">Modifier</a></li>
                        </ul>
                        <ul class="nav pull-right">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    Ma boutique
                                    <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('fos_user_profile_show')}}">Vos informations</a></li>
                                    <li class="divider"></li>
                                    <li><a href="{{ path('fos_user_profile_contact')}} ">Contacter Piggybox</a></li>
                                    <li class="divider"></li>
                                    <li><a href="{{path('fos_user_security_logout')}}">Déconnexion</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            </header>

            <div id="toolbox" class="left">

                <a href="#">
                    <img src="{{ asset('bundles/piggyboxticket/img/top.png') }}" />
                </a><br /><br />

                <a href="{{ path('customer_search') }}">
                    <img src="{{ asset('bundles/piggyboxticket/img/search.png') }}" />
                </a>
            </div>

            {% block content %}{% endblock content %}
            {% block fos_user_content %}{% endblock fos_user_content %}

            <footer id="footer">
                <small>Logiciel réalisé et proposé par <a href="http://www.piggybox.fr">PiggyBox</a>.</small>
            </footer>
        </div>



        {% block javascripts %}
            <!-- NOTE: necessaire pour le bundle FOSJsRoutingBundle -->
            <script type="text/javascript" src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script type="text/javascript" src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
            {% javascripts
                '@PiggyBoxTicketBundle/Resources/public/js/vendor/jquery-1.7.2.min.js'
                '@PiggyBoxTicketBundle/Resources/public/js/vendor/bootstrap.js'
                '@PiggyBoxTicketBundle/Resources/public/js/vendor/jquery.airport-1.1.source.js'
                '@PiggyBoxTicketBundle/Resources/public/js/app.js'
            %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>
